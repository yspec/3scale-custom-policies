{
  "$schema": "http://apicast.io/policy-v1/schema#manifest#",
  "name": "Send to imVision",
  "summary": "Send API data to imvision for montioring.",
  "description": "The policy sends a copy of the API call data to an imVision AAMP collector",
  "version": "0.1",
  "configuration": {
    "type": "object",
    "properties": {
      "aamp_endpoint": {
        "type": "string",
        "description": "Imvision Endpoint"
      }, 
      "aamp_request_method": {
        "type": "string",
        "description": "Imvision Method"
      },
       "aamp_scheme": {
        "type": "string",
        "description": "Imvision Scheme"
      },
       "aamp_server_name": {
        "type": "string",
        "description": "Imvision Server"
      },
       "aamp_server_port": {
        "type": "string",
        "description": "Imvision Port"
      },
      "timeout": 
      {
        "description": "Timeout for imvision AAMP server response in seconds",
        "type": "integer"
      }
    }
  }
}